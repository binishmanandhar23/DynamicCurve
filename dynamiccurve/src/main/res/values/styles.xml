<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/color_purple</item>
        <item name="colorPrimary">@color/color_purple</item>
    </style>

    <style name="AppThemeMain" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/color_purple</item>
        <item name="colorPrimary">@color/color_purple</item>

    </style>

    <style name="TabWidgetText">
        <item name="android:fontFamily">@font/tt_common_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SecondSettings" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#353535</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_purple</item>
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <!-- Animations for Dialogs-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
<!--        <item name="android:windowExitAnimation">@anim/exit_to_left</item>-->
<!--        <item name="android:popupEnterTransition">@anim/enter_from_left</item>-->
<!--        <item name="android:popupExitTransition">@anim/exit_to_right</item>-->
    </style>


    <style name="RequestsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_purple</item>
        <item name="colorPrimaryDark">@color/color_purple</item>
        <item name="colorAccent">@color/color_purple</item>
        <item name="android:background">@color/color_purple</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MyBottomSheetDialogStyle</item>
    </style>
    <style name="MyBottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">@dimen/margin_350</item>
    </style>

</resources>
